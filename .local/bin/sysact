#!/bin/sh

ctl="systemctl"

wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*dwm(}"
	echo "${tree%%)*}"
}

case "$(printf "ğŸ”’ lock\nâ™»ï¸ renew dwm\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ’¤ sleep" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') slock ;;
	"â™»ï¸ renew dwm") kill -HUP "$(wmpid)" ;;
	'ğŸ”ƒ reboot') $ctl reboot -i ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff -i ;;
	'ğŸ’¤ sleep') slock $ctl suspend -i ;;
	*) exit 1 ;;
esac
